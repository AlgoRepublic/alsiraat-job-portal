{
  "name": "al-siraat-tasker-backend",
  "version": "1.0.0",
  "description": "Backend server for Al Siraat Task Marketplace Platform",
  "main": "dist/index.js",
  "author": "ARS",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mailgun.js": "^12.0.3",
    "mime-types": "^3.0.1",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "seed": "NODE_ENV=development ts-node -r tsconfig-paths/register src/seed/index.ts",
    "seed:prod": "NODE_ENV=production node dist/seed/index.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.7",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
